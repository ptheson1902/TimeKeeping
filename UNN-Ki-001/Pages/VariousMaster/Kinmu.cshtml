                        <div class="col-4">
                            <div class="d-flex">
                                <select class="form-select me-2 kyukei1ToKbn"
                                    aria-label="Default select"
                                    asp-for="MKinmuCRUD.Kyukei1ToKbn"
                                    required
                                >
                                    <option value="0" selected>
