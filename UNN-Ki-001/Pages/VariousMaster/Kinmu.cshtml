                            <div class="d-flex">
                                <select class="form-select me-2 kyukei2FrKbn"
                                    aria-label="Default select"
                                    asp-for="MKinmuCRUD.Kyukei2FrKbn"
                                >
                                    <option selected></option>
                                    <option value="0">当日</option>
                                    <option value="1">前日</option>
