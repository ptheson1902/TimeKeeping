                                    required>
                                <option value="0" selected>
                                    丸めなし
                                </option>
                                <option value="1">切り下げる</option>
                                <option value="2">切り上げる</option>
                            </select>
                        </div>
                        <div class="col-2">
                            <input type="number"
                                asp-for="MKinmuCRUD.KyukeiFrMarumeTm"
                                class="form-control text-end kyukeiFrMarumeTm"
                                maxlength="2"
                                value="0"    
