                        <div class="col-2">
                            <input type="number"
                                asp-for="MKinmuCRUD.KinmuToMarumeTm"
                                   class="form-control text-end kinmuToMarumeTm"
                                maxlength="2"
                                value="0"
                            />
                        </div>
                        <div class="col-auto">
                            <label asp-for="MKinmuCRUD.KinmuToMarumeTm"
                                class="col-form-label">分単位</label>
