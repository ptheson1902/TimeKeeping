                     <label for="valid_flg2">有効</label>
                     <input
                        type="radio"
                        name="valid_flg2"
                        value="1"
                        id="valid_flg2"
                     />
                     <label for="valid_flg">無効</label>
                     <input
                        type="radio"
                        name="valid_flg2"
