@page
@model LoginModel

@{
    ViewData["Title"] = "ログイン";
}
<section class="vh-100 d-flex justify-content-center align-items-center">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://www.uninoir.co.jp/img/top/img01.png?version=xxxxxxx1"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1 class="lead fw-bold mb-3 me-3 text-center text-success">勤怠管理システム</h1>
        <form id="account" method="post">
          <!-- 社員番号入力 -->
          <div class="form-outline mb-4">
            <label asp-for="Input.UserNamOrShain_no" class="form-label" for="inputUsername">社員番号</label>
            <input asp-for="Input.UserNamOrShain_no" id="inputUsername" class="form-control form-control-lg"
              placeholder="社員番号" />
            <span asp-validation-for="Input.UserNamOrShain_no" class="text-danger"></span>
          </div>

          <!-- パスワード入力 -->
          <div class="form-outline mb-3">
            <label asp-for="Input.Password" class="form-label" for="inputPassword">パスワード</label>
            <input asp-for="Input.Password" id="inputPassword" class="form-control form-control-lg"
              placeholder="パスワード" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>
          <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
          <div class="d-flex justify-content-between align-items-center">
            <!-- チェックボックス -->
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2 d-flex flex-column align-items-center">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">ログイン</button>
            <p class="small fw-bold mt-2 pt-1 mb-0"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">新規登録</a></p>
          </div>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">新規登録</a></p>

        </form>
      </div>
    </div>
  </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
